@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewData["Title"] = "MovieForm";
    string newOrEdit = "New";
}

@if (Model.Id > 0)
{
    newOrEdit = "Edit";
}

<h2>@newOrEdit Movie</h2>

<form asp-controller="Movies" asp-action="Save" asp-antiforgery="true"  class="col-md-6">
    <div class="row mt-4">
        <label asp-for="Name" class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" asp-for="Name" class="form-control"/>
            <span asp-validation-for=Name></span>
        </div>
    </div>

    <div class="row mt-4">
        <label asp-for="ReleaseDate" class="col-sm-3 col-form-label">Release Date</label>
        <div class="col-sm-6">
            <input type="date" asp-for="ReleaseDate" class="form-control"/>
            <span asp-validation-for=ReleaseDate></span>
        </div>
    </div>

    <div class="row mt-4">
        <label asp-for="GenreId" class="col-sm-3 col-form-label">Genre</label>
        <div class="col-sm-6">
            <select asp-for="GenreId"
                    asp-items="@(new SelectList(Model.Genres, "Id", "Name"))"
                    class="form-select">
                <option selected disabled value="">Select Genre</option>
            </select>
            <span asp-validation-for=GenreId></span>
        </div>
    </div>

    <div class="row mt-4">
        <label asp-for="NumberInStock" class="col-sm-3 col-form-label">Number in Stock</label>
        <div class="col-sm-6">
            <input type="text" asp-for="NumberInStock" class="form-control"/>
            <span asp-validation-for=NumberInStock></span>
        </div>
    </div>

    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-primary mt-4">Save</button>

</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}
