@model Vidly.Models.Movie
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>
<ul class = "mt-4">
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Date.ToString("dddd, dd MMMM yyyy")</li>
    <li>Date Added: @Model.DateAdded.Date.ToString("dddd, dd MMMM yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

